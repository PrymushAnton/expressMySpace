model Post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  authorId  Int
  author    Profile   @relation(fields: [authorId], references: [id])
  views     Profile[] @relation("PostViews")
  likes     Profile[] @relation("PostLikes")
  tags      Tag[]
  images    Image[]
  links     Link[]
}
